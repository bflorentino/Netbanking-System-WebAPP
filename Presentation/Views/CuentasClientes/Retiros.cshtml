@model IEnumerable<Bussiness.Model.ViewModel.HistRetiros>

@{
    Layout = "_LayoutClientes";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/Tables.css"/>

<input type="date" name="fechaInicial"  class="fechaInicial"/>
<input type="date" name="fechaFinal"  class="fechaFinal"/>
<input type="button" name="buscar" class="buscar" value="Buscar"/>

        <table class="content-table">
            <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(retiro => retiro.CodigoRetiro)
                </td>
                 <td>
                    @Html.DisplayNameFor(retiro => retiro.TarjetaDestino)
                </td>
                <td>
                    @Html.DisplayNameFor(retiro => retiro.MontoRetirado)
                </td>
                  <td>
                    @Html.DisplayNameFor(retiro => retiro.Fecha)
                </td>
            </tr>     
           </thead>
           <tbody>
               @{ foreach(var retiro in Model)
                {
                   <tr>
                        <td>@Html.DisplayFor(item => retiro.CodigoRetiro)</td>
                        <td>@Html.DisplayFor(item => retiro.TarjetaDestino)</td>
                        <td>@Html.DisplayFor(item => retiro.MontoRetirado)</td>
                         <td>@Html.DisplayFor(item=> retiro.Fecha)</td>
                    </tr>
                    }   
                }
                </tbody>
            </table>
    