@model IEnumerable<Bussiness.Model.ViewModel.HistRetiros>

@{
    Layout = "_LayoutClientes";
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
<link rel="stylesheet" href="~/css/Tables.css"/>
<link rel="stylesheet" href="~/css/Filtering.css" />

<div class = "filter">
    <h1>Filtrar por número de cuenta</h1>
    @{
        foreach(string cuenta in ViewBag.cuentas)
        {
            <input type="button" value="@cuenta" class="" onclick="changeListRetiros(this.value);">
        }
    } 
</div>

<h1 class="histTitle">Historial de retiros</h1>

<div class="dateFilter">
<input type="date" name="fechaInicial"  class="fechaInicial" id="fechaIn"/>
<input type="date" name="fechaFinal"  class="fechaFinal" id="fechaFin"/>
<input type="button" name="buscar" class="buscar" value="Buscar" onclick="GetRetirosPorFecha()"/>
<input type="hidden" id="acc"/>
</div>

<h4  id="valorCuenta"></h4>

<div id="depositos">
        <table class="content-table">
            <thead>
            <tr>
                <td>
                    @Html.DisplayNameFor(retiro => retiro.CodigoRetiro)
                </td>
                 <td>
                    @Html.DisplayNameFor(retiro => retiro.TarjetaDestino)
                </td>
                <td>
                    @Html.DisplayNameFor(retiro => retiro.MontoRetirado)
                </td>
                  <td>
                    @Html.DisplayNameFor(retiro => retiro.Fecha)
                </td>
            </tr>     
           </thead>
           <tbody>
               @{ foreach(var retiro in Model)
                {
                   <tr>
                        <td>@Html.DisplayFor(item => retiro.CodigoRetiro)</td>
                        <td>@Html.DisplayFor(item => retiro.TarjetaDestino)</td>
                        <td>@Html.DisplayFor(item => retiro.MontoRetirado)</td>
                         <td>@Html.DisplayFor(item=> retiro.Fecha)</td>
                    </tr>
                    }   
                }
                </tbody>
            </table>
    </div>

 <script src="~/js/PartViews.js"></script>
