@model Bussiness.Model.BindingModel.CreditCardCreateBindingModel;

@{
    Layout = "_LayoutAdmin";
}

<link rel="stylesheet" href="/css/DataForm.css" />
<link rel="stylesheet" href="/css/PoPupWindow.css" />

<form action="CreateTarjeta" method = "post" class= "form-data">
        <h1 class="form-title">Nueva Tarjeta de crédito</h1>
 <div class="field">
    @Html.LabelFor(tarjeta => tarjeta.NumeroTarjeta)
    @Html.EditorFor(tarjeta => tarjeta.NumeroTarjeta, new {htmlAttributes = new {@class="input-text"} })
    @Html.ValidationMessageFor(tarjeta => tarjeta.NumeroTarjeta, "", new {@class = "error-message"})
 </div>

 <div class="field">
     @Html.LabelFor(tarjeta => tarjeta.Cedula)
    @Html.EditorFor(tarjeta => tarjeta.Cedula, new {htmlAttributes = new {@class="input-text"} })
    @Html.ValidationMessageFor(tarjeta => tarjeta.Cedula, "", new {@class = "error-message"})
 </div>

 <div class="field">
 @Html.LabelFor(tarjeta => tarjeta.ValorDeValidacion)
    @Html.EditorFor(tarjeta => tarjeta.ValorDeValidacion, new {htmlAttributes = new {@class="input-text"} })
    @Html.ValidationMessageFor(tarjeta => tarjeta.ValorDeValidacion, "", new {@class = "error-message"})
 </div>

<div class="field">
 @Html.LabelFor(tarjeta => tarjeta.BalanceDisponible)
    @Html.EditorFor(tarjeta => tarjeta.BalanceDisponible, new {htmlAttributes = new {@class="input-text"} })
    @Html.ValidationMessageFor(tarjeta => tarjeta.BalanceDisponible, "", new {@class = "error-message"})
</div>

<div class="field">
 @Html.LabelFor(tarjeta => tarjeta.FechaVencimiento)
    @Html.EditorFor(tarjeta => tarjeta.FechaVencimiento, new {htmlAttributes = new {@class="input-text"} })
    @Html.ValidationMessageFor(tarjeta => tarjeta.FechaVencimiento, "", new {@class = "error-message"})
</div>

    <input type="button" value="Editar Cuenta" class="submit-button" id="open" />

        <div class="modal-cont" id="modal-cont">
        <div class="modal">
        <h1>Nuevo Cliente</h1>
        <br />
        <p>¿Desea registrar la nueva tarjeta de crédito? 
        </p>
        <br />
        <input type="submit" value="SI" class="yes pop" id="enviar"> 
        <input type="button"  value="NO" class="no pop" id="cerrar"/>
        </div>
    </div>
</form>

@{
    @if (ViewBag.Response != null)
{
        <div class="modal-cont show" id="modalResponse">
        <div class="modal">
        <h1>Respuesta del servidor</h1>
        <p>@ViewBag.Response</p>
        <input  type="button" value="Cerrar" class="no pop" id="cerrarResponse"> 
        </div>
    </div>
}
}


    <script src="~/js/Popup.js"></script>