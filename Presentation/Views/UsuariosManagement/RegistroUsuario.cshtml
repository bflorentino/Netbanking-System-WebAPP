@model Bussiness.Model.BindingModel.UsersCreateBindingModel

@{
    Layout = "_LayoutFree";
}
<link rel="stylesheet" href="/css/PoPupWindow.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
   <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
   <link href="~/css/FormulariosAutenticacion.css"  rel="stylesheet" />

<div id="Autenticacion">

<form action="RegistroUsuario" method = "post" enctype="multipart/form-data" id="form">

     <div id="imgF">
    <img src="~/IMG/lgob.png" id="form-img" />
    </div>

    <div>
    @Html.LabelFor(usuario => usuario.Cedula)
    @Html.EditorFor(usuario => usuario.Cedula, new {htmlAttributes = new {@class="input-text"} })
    @Html.ValidationMessageFor(usuario => usuario.Cedula, "", new {@class = "error-message"})
    </div>

    <div>
    @Html.LabelFor(usuario => usuario.NombreUsuario)
    @Html.EditorFor(usuario => usuario.NombreUsuario, new {htmlAttributes = new {@class="input-text"} })
    @Html.ValidationMessageFor(usuario => usuario.NombreUsuario, "", new {@class = "error-message"})
    </div>

    <div>
    @Html.LabelFor(usuario => usuario.PasswordHashed)
    @Html.PasswordFor(usuario => usuario.PasswordHashed, new {@class="input-text"} )
    @Html.ValidationMessageFor(usuario => usuario.PasswordHashed, "", new {@class = "error-message"})
   </div>

    <input type="file" name="Foto" class = "input-texto" >

    <input type="submit" value="Registrarme" class="submit-button" />

</form>

@{
    if (ViewBag.Response != null)
{
        <div class="modal-cont show" id="modalResponse">
        <div class="modal">
        <h1>Respuesta del servidor</h1>
        <p>@ViewBag.Response</p>
        <input  type="button" value="Cerrar" class="no pop" id="cerrarResponse"> 
        </div>
    </div>
}
}

</div>

 <script src="~/js/Popup.js"></script>